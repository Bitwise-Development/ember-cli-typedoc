{
  "name": "ember-cli-typedoc-workspace",
  "private": true,
  "author": {
    "name": "Michael Dean Jones",
    "email": "michael@bitwise-development.com"
  },
  "license": "ISC",
  "bugs": "https://github.com/Bitwise-Development/ember-cli-typedoc/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bitwise-Development/ember-cli-typedoc.git"
  },
  "scripts": {
    "test": "jest --runInBand"
  },
  "workspaces": [
    "packages/*",
    "test-packages/*"
  ],
  "devDependencies": {
    "chai-files": "^1.4.0",
    "dotenv-cli": "^4.1.1",
    "execa": "^5.1.1",
    "jest": "^27.4.5",
    "release-it": "^14.11.8",
    "release-it-lerna-changelog": "^4.0.1",
    "release-it-yarn-workspaces": "^2.0.1"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test-packages/*.test.js"
    ]
  },
  "volta": {
    "node": "12.22.7",
    "npm": "8.3.0"
  },
  "release-it": {
    "npm": false,
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release ${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "release-it-yarn-workspaces": {
        "publish": false,
        "workspaces": [
          "packages/*"
        ]
      }
    }
  }
}
