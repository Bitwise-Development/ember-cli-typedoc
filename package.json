{
  "name": "ember-cli-typedoc-workspace",
  "private": true,
  "author": {
    "name": "Michael Dean Jones",
    "email": "michael@bitwise-development.com"
  },
  "license": "ISC",
  "bugs": "https://github.com/Bitwise-Development/ember-cli-typedoc/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bitwise-Development/ember-cli-typedoc.git"
  },
  "scripts": {
    "release": "dotenv release-it",
    "test": "jest --runInBand",
    "test:coverage": "nyc --clean jest --runInBand --collectCoverage=true"
  },
  "workspaces": [
    "packages/*",
    "test-packages/*"
  ],
  "devDependencies": {
    "@release-it/conventional-changelog": "^4.0.0",
    "chai-files": "^1.4.0",
    "dotenv-cli": "^4.1.1",
    "execa": "^5.1.1",
    "jest": "^27.4.5",
    "nyc": "^15.1.0",
    "release-it": "^14.11.8",
    "release-it-yarn-workspaces": "^2.0.1"
  },
  "jest": {
    "collectCoverage": false,
    "coverageReporters": [
      "json"
    ],
    "testMatch": [
      "<rootDir>/test-packages/*.test.js"
    ]
  },
  "nyc": {
    "all": true,
    "tempDirectory": "./coverage",
    "reporter": [
      "lcov",
      "text"
    ],
    "include": [
      "packages/ember-cli-typedoc/index.js",
      "packages/ember-cli-typedoc/lib/*.js"
    ]
  },
  "volta": {
    "node": "12.22.7",
    "npm": "8.3.0"
  },
  "release-it": {
    "npm": false,
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release ${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "chore",
              "section": "Chores"
            }
          ]
        }
      },
      "release-it-yarn-workspaces": {
        "publish": false,
        "additionalManifests": {
          "dependencyUpdates": [
            "test-packages/*/package.json"
          ]
        },
        "workspaces": [
          "packages/*"
        ]
      }
    }
  },
  "version": "1.0.0"
}
