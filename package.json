{
  "name": "@bitwise/ember-cli-typedoc-workspace",
  "description": "TypeDoc documentation generation for EmberCLI projects",
  "private": true,
  "author": {
    "name": "Michael Dean Jones",
    "email": "michael@bitwise-development.com"
  },
  "license": "ISC",
  "bugs": "https://github.com/Bitwise-Development/ember-cli-typedoc/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bitwise-Development/ember-cli-typedoc.git"
  },
  "keywords": [
    "ember-addon",
    "TypeDoc",
    "TypeScript",
    "docs",
    "documentation"
  ],
  "scripts": {
    "test": "jest --runInBand"
  },
  "workspaces": [
    "packages/*",
    "test-packages/*"
  ],

  "devDependencies": {
    "chai-files": "^1.4.0",
    "execa": "^5.1.1",
    "jest": "^27.4.5"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test-packages/*.test.js"
    ]
  },
  "volta": {
    "node": "12.22.7",
    "npm": "8.3.0"
  }
}
